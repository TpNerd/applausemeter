<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"

    tools:context=".MainActivity"
    >

    <RelativeLayout
        android:id="@+id/safeContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorSystemBars"
        android:clipToPadding="false">

        <ImageView
            android:id="@+id/sfondo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/sfondo2"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="22">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:weightSum="15">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Idle"
                        android:id="@+id/textView"
                        android:textSize="36dp"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8">

                    <TextView
                        android:id="@+id/textViewScore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:gravity="end"
                        android:textSize="36dp"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="18"
                android:orientation="horizontal"
                android:weightSum="15">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7">

                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/listView"
                        tools:listitem="@android:layout/simple_list_item_1"
                        android:headerDividersEnabled="false"
                        android:drawSelectorOnTop="false"
                        android:divider="#222322"
                        android:dividerHeight="4dp"
                        android:scrollIndicators="right"
                        android:scrollingCache="false"
                        android:smoothScrollbar="false"
                        android:textFilterEnabled="false"
                        android:stackFromBottom="true"
                        android:textAlignment="center"
                        android:fastScrollEnabled="true"
                        android:layout_alignParentTop="true"
                        android:layout_above="@+id/myImageButton" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/myImageButton"
                        android:layout_width="64dp"
                        android:layout_height="98dp"
                        android:background="@drawable/slider"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentBottom="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="&lt;"
                        android:id="@+id/textView2"
                        android:layout_alignTop="@+id/myImageButton"
                        android:layout_toStartOf="@+id/myImageButton"
                        android:layout_toLeftOf="@+id/myImageButton"
                        android:layout_marginEnd="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="36dp"
                        android:elevation="2dp"
                        android:singleLine="true"
                        android:textColor="#f72ef0"
                        android:textStyle="bold" />

                </RelativeLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/lights10"
                        android:id="@+id/meter"
                        android:adjustViewBounds="false"
                        android:cropToPadding="false"
                        android:nestedScrollingEnabled="false"
                        android:scaleType="fitXY" />

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="15">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8" />

            </LinearLayout>

        </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>